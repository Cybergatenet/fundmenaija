    # RewriteRule ^(.*)$ /index.php?/$1 [QSA,L]

    #RewriteRule ^(.+)\.php$ /$1 [R,L]
    #RewriteCond %{REQUEST_FILENAME}.php -f
    #RewriteRule ^(.*?)/?$ /$1.php [NC,END]

